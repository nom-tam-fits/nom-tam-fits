						</executions>
						<configuration>
							<classpathScope>test</classpathScope>
							<mainClass>nom.tam.fits.doc.GenerateReleaseNote</mainClass>
						</configuration>
					</plugin>
					<plugin>
						<artifactId>maven-assembly-plugin</artifactId>
						<version>3.3.0</version>
