<settings>
  <servers>
    <server>
      <id>nexus</id>
      <username>${env.PORTAL_USERNAME}</username>
      <password>${env.PORTAL_PASSWORD}</password>
    </server>
    <server>
      <id>github</id>
      <configuration>
        <httpHeaders>
          <property>
            <name>Authorization</name>
            <value>Bearer ${env.GITHUB_TOKEN}</value>
          </property>
        </httpHeaders>
      </configuration>
      <username>${env.PKG_USERNAME}</username>
      <password>${env.PKG_PASSWORD}</password>
    </server>
    <server>
      <id>central</id>
      <username>${env.PORTAL_USERNAME}</username>
      <password>${env.PORTAL_PASSWORD}</password>
    </server>
  </servers>
</settings>
